        "className": "column-{{ id }}"
        {% if id in config.sortable %}, "orderable": true{%  endif %}
        {% if config.searchableColumns is defined %}
            {% if id in config.searchableColumns|keys %}, "searchable": true{% else %}, "searchable": false{% endif %}
        {% endif %}

    }
